{
  "name": "StopHistory",
  "version": "1.2",
  "description": "Starts and stops recordinh browser`s history",
  "permissions": [
    "history",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icon.png",           
      "32": "icon.png",           
      "45": "icon.png", 
      "128":"icon.png"               
    }
  },
  "icons":{
    "16": "icon.png",           
    "32": "icon.png",           
    "45": "icon.png", 
    "128":"icon.png"  
  },
  "manifest_version": 2
}
